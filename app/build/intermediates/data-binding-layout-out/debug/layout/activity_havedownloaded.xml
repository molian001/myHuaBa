<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:id="@+id/actionbar_havadownloaded"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@drawable/nav_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_havedownloaded"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="下载课程"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/iv_downloaded_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="编辑"
            android:textColor="@color/White"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnl_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_downloaded_selectall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全选"
            android:background="@drawable/btn_mine_selected"
            android:textColor="@color/Zhuti_green"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/Gray" />

        <TextView
            android:id="@+id/tv_downloaded_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:background="@drawable/btn_mine_selected"
            android:textColor="@color/Zhuti_green"
            android:textSize="25dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_downloaded_courses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lnl_edit"
        android:focusable="true"
        android:layout_below="@+id/actionbar_havadownloaded"></ListView>
</RelativeLayout>