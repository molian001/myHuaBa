<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/found_background"
    android:layout_height="200dp"
    android:background="@drawable/match1">
    <TextView
        android:id="@+id/found_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首届画吧彩铅大赛"
        android:textColor="@color/White"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/found_lable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="火热报名中"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:layout_below="@+id/found_lable"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/found_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016.4.1-2016.6.1"
        android:textColor="@color/White"
        android:textSize="10dp"
        android:layout_below="@+id/found_lable2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>