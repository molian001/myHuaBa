<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_upload_mycourse"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/beauty"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/tv_upload_mycoursename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程名"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/iv_upload_mycourse"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_upload_mycoursenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已上传：0集"
        android:textColor="@color/Gray"
        android:textSize="15dp"

        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@+id/iv_upload_mycourse"
        android:layout_alignStart="@+id/tv_upload_mycoursename" />

</RelativeLayout>
</LinearLayout>